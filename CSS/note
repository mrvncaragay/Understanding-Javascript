//event reference MDN
//https://developer.mozilla.org/en-US/docs/Web/Events

//selecting the first element find
document.querySelector

//removing class
document.querySelector('#id' or '.class').classList.remove('class name')

//adding class
document.querySelector('#id' or '.class').className += 'class name';

//only data
document.querySelector('#id' or '.class').textContent = data

//adding html content with data
document.querySelector('#id' or '.class').innerHTML = '<em>' + data + </em>

//setting display to none
document.querySelector('#id' or '.class').style.display = 'none'

//insert html elememnts
document.querySelector('#id' or '.class').insertAdjacentHTML(html)
    'beforebegin': Before the element itself.
    'afterbegin': Just inside the element, before its first child.
    'beforeend': Just inside the element, after its last child.
    'afterend': After the element itself.